<section>

  <p>RECIPE BODY</p>
  <p><%= recipe.body %> </p>
  <p>RECIPE WRITER</p>
  <p>submitted by: <%= recipe.user.username %> </p>

  <form method="post" action="/questions/<%= @question.id %>/recipes/<%= recipe.id %>/votes" class="inline upvote-form">
  <button type="submit" name="up_vote" value="true" class="upvote-button"></button>
  <span class='up-points'><%= recipe.up_points %></span></form>

  <form method="post" action="/questions/<%= @question.id %>/recipes/<%= recipe.id %>/votes" class="inline downvote-form">
  <button type="submit" name="up_vote" value="false" class="downvote-button"></button>
  <span class='down-points'><%= recipe.down_points %></span></form>

</section>

<!-- edit/delete buttons here -->
<% if recipe.user_id == session[:user] %>

  <button>
    <a href=<%="/questions/#{@question.id}/recipes/#{recipe.id}/edit"%>>Edit Recipe</a>
  </button>

  <br>
  <form method="post" action=<%= "/questions/#{@question.id}/recipes/#{recipe.id}" %> >
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete Recipe">
  </form>

<% end %>
<section>
<p>THESE ARE THE COMMENTS</p>
<button>
  <a href=<%="/questions/#{@question.id}/recipes/#{recipe.id}/comments/new"%>>New Comment</a>
</button>
<% if recipe.comments %>
  <% recipe.comments.each do |comment| %>
    <%= erb :'comments/_show', locals: { comment: comment} %>
  <% end %>
<% end %>
</section>
